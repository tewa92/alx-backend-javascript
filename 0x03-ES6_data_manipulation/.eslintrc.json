{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:import/errors", "plugin:import/warnings"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "constructor-super": "error",
    "no-use-before-define": ["error", { "functions": false }],
    "semi": ["error", "always"]
  },
    "plugins": ["import", "node", "promise"]
}
